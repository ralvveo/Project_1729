<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.ButtonFragment">

    <TextView
        android:id="@+id/rabkinTestVoiceMessage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/rounded_message_background"
        android:padding="16dp"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Говорите громче" />

    <Button
        android:id="@+id/firstMeasureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#ff80cc"
        android:fontFamily="@font/raleway_regular"
        android:paddingBottom="10dp"
        android:text="@string/press_button_when"
        android:textColor="@color/whiteBlack"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/bigRoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/big_round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temperatureName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Температура:"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/bigRoundButton"
        app:layout_constraintTop_toBottomOf="@id/bigRoundButton" />

    <TextView
        android:id="@+id/temperatureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        tools:text = "24°C"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/bigRoundButton"
        app:layout_constraintBottom_toBottomOf="@id/temperatureName"
        />


    <TextView
        android:id="@+id/humidityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Влажность:"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/bigRoundButton"
        app:layout_constraintTop_toBottomOf="@id/temperatureName" />

    <TextView
        android:id="@+id/humidityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        tools:text = "40 %"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/bigRoundButton"
        app:layout_constraintBottom_toBottomOf="@id/humidityName"
        />


    <TextView
        android:id="@+id/luxName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Освещенность:"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/bigRoundButton"
        app:layout_constraintTop_toBottomOf="@id/humidityName" />

    <TextView
        android:id="@+id/luxValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        tools:text = "100 лк"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/bigRoundButton"
        app:layout_constraintBottom_toBottomOf="@id/luxName"
        />

    <ImageButton
        android:id="@+id/voiceButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_mic_on"
        app:layout_constraintBottom_toTopOf="@+id/firstMeasureButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>