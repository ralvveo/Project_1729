<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="peekerItemStyle">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cornerRadius">7dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="screenTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="screenTextStyle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="screenTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttonStyle1">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_corner_shape</item>
    </style>

    <style name="editTextStyle2">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_corner_shape</item>
    </style>

    <style name="editTextActiveTextStyle">
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/mainBlue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>


    <style name="BottomMenuTextStyle">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TabsTextStyle">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <style name="editTextActiveTextStyle2">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="radioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/mainBlue</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>


    <style name="TableTitleStyle">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/table_title_shape</item>
        <item name="android:padding">1dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">40dp</item>
    </style>


    <style name="TableTextStyle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/table_text_shape</item>
        <item name="android:padding">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="MenuItemTitleStyle">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="MenuItemTitleStyle2">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="MenuItemTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="MediumTextStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="MiniButtonsTextStyle">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="AlertTextStyle2" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertButtonStyle2" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:titleTextColor">@color/blue</item>
    </style>


    <style name="historyContentTextStyle">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="historyContentTextStyle2">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
    </style>
</resources>